<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Math Center Teacher</title>

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

  <!-- bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-SgOJa3DmI69IUzQ2PVdRZhwQ+dy64/BUtbMJw1MZ8t5HZApcHrRKUc4W0kG879m7" crossorigin="anonymous">
  <!-- <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous"> -->

  <!-- pt-serif -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=PT+Serif:ital,wght@0,400;0,700;1,400;1,700&family=Roboto+Mono:ital,wght@0,100..700;1,100..700&display=swap" rel="stylesheet">

  <!-- global style sheet -->
  <link rel="stylesheet" href="style.css">
  <link rel="stylesheet" href="fellow-style.css">

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<body>
  <nav>
    <a href="/" id="logo-a">
      <img src="https://www.westridge.org/uploaded/images/smallLogo.png" alt="westridge logo" id="logo">
    </a>
    <% const today = new Date("2025-5-13")
    today.setHours(0,0,0,0)
    const tomorrow = new Date(today)
    tomorrow.setDate(today.getDate() + 1)
    const endWeek = new Date(today)
    endWeek.setDate(today.getDate() + 7)
    function convertToTitleCase(str) {
      if (!str) {
          return ""
      }
      return str.toLowerCase().replace(/\b\w/g, s => s.toUpperCase());
    }
  %>

  <a href="fellow?min=<%= today %>&max=<%= tomorrow %>"><button>Today</button></a>
  <a href="fellow?min=<%= today %>&max=<%= endWeek %>"><button>This Week</button></a>

  <form action="fellow" method="GET" class="d-flex flex-wrap align-items-center gap-3">
    <div class="form-group d-flex align-items-center">
      <label for="start-date" class="me-2">Start</label>
      <input 
        id="start-date" 
        name="min" 
        type="date" 
        value="<%= selected.min ? new Date(selected.min).toISOString().split('T')[0] : '' %>"
        onchange="this.form.submit()"
      >
    </div>

    <div class="form-group d-flex align-items-center">
      <label for="end-date" class="me-2">End</label>
      <input 
        type="date" 
        id="end-date" 
        name="max" 
        value="<%= selected.max ? new Date(selected.max).toISOString().split('T')[0] : '' %>"
        onchange="this.form.submit()"
      >
    </div>


    <div class="form-group d-flex align-items-center">
      <label for="rotation" class="me-2">Meet Time</label>
      <select name="timeRotation" id="rotation" onchange="this.form.submit()">
        <option value="all" <%= selected.rot === "all" ? "selected" : "" %>>all</option>
        <% allTimeRotations.forEach((time) => { %>
          <option value="<%= time %>" <%= selected.rot === time ? "selected" : "" %>>
            <%= time %>
          </option>
        <% }) %>
      </select>

    </div>
  </form>
    
  </nav>

  <% const rotation = ["1", "2", "3", "4", "5", "6"] %>
  <div class="accordion" id="accordionExample">
    <% days.forEach((day, i) => { %>
      <div class="accordion-item">
        <h2 class="accordion-header">
          <button 
            class="accordion-button <%= i !== 0 ? 'collapsed' : '' %>" 
            type="button" 
            data-bs-toggle="collapse" 
            data-bs-target="#collapse<%= i %>" 
            aria-expanded="<%= i === 0 ? 'true' : 'false' %>" 
            aria-controls="collapse<%= i %>"
          >
            <%= day.date.toDateString() %> 
            <% if (rotation.includes(day.timeRotation)) { %> 
              Lunch Day: <%= day.timeRotation %>
            <% } %> 
            <% if (day.timeRotation.split("-")[1] === "am") { %>
              Morning
            <% } %> 
            <% if (day.timeRotation.split("-")[1] === "pm") { %>
              Afterschool
            <% } %>
            
            
          </button>
        </h2>
  
        <div id="collapse<%= i %>" class="accordion-collapse collapse <%= i === 0 ? 'show' : '' %>" aria-labelledby="heading<%= i %>" data-bs-parent="#accordionExample">
          <div class="accordion-body">

            <div class="card">

              <ul class="list-group list-group-flush">
                
                <% if (day.available) {day.available.forEach(fellow => {%>
                <li class="list-group-item">
                  <strong><%= fellow %>:</strong> Free 
                  <a href="/teacher/absent/<%= day._id %>/<%= fellow %>"><button class="btn btn-danger">Absent</button></a>
                  
                </li>
                <% })} %>

               
                <% if(day.meeting){ day.meeting.forEach(meet => {%>
                <li class="list-group-item">
                  <strong><%= meet.fellow %>:</strong> meeting with <%= meet.student %> 
  
                  <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#details<%= i %>" aria-expanded="false" aria-controls="details<%= i %>">
                    Show Details
                  </button>
                  <form method="POST" action="/removeMeeting" style="margin: 0; padding: 0; display: inline;" onsubmit="return confirm('Are you sure you want to remove the meeting between <%= meet.fellow %> and <%= meet.student %>')">
                    <button class="btn btn-danger">Remove Meeting</button>
                    <input type="hidden" name="id" value="<%= day._id %>">
                    <input type="hidden" name="meetArray" value="<%= meet %>">
                    <input type="hidden" name="fellow" value="<%= meet.fellow %>">
                  </form>
                  <div class="collapse" id="details<%= i %>">
                    <div class="card card-body">
                      Subject: <%= meet.details.subject %> <br>
                      Additional Details: <%= meet.details.additional %>
                    </div>
                  </div>
                </li>
                <% })} %>

                <% if (day.absent) {day.absent.forEach(fellow => {%>
                  <li class="list-group-item">
                    <strong><%= fellow %>:</strong> Absent 
                    <a href="/teacher/deleteAbs/<%= day._id %>/<%= fellow %>"><button class="btn btn-danger">Remove Absense</button></a>
                    <!-- <button class="btn btn-danger">Absent</button> -->
                  </li>
                  <% })} %>
                
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
  

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js" integrity="sha384-k6d4wzSIapyDyv1kpU366/PK5hCdSbCRGRCMv+eplOQJWyd1fbcAu9OCUj5zNLiq" crossorigin="anonymous"></script>
</body>
</html>